pipeline 
{
    agent any
    stages
    {
        stage("Git Clone") 
        {
            steps {
                git 'https://github.com/sakthibazz1/aws_devops_projects-1.git'
                  }
         }
            stage("Maven Builds")
            {
            steps {
                sh "mvn validate"            
                sh "mvn clean package"
                sh "mvn compile"
                sh "mvn test"
                sh "mvn install"
                sh "mv target/*.war target/myweb.war"
                  }
           }
            stage ("deploy-dev")
          {
            steps{
             sshagent(['sakthi'])
             {
           sh """
           scp -o StrictHostKeyChecking=no target/myweb.war ec2-user@172.31.48.113:/usr/local/apache-tomcat-8.5.85/webapps/
           
           ssh ec2-user@172.31.48.113 /usr/local/apache-tomcat-8.5.85/bin/shutdown.sh

           ssh ec2-user@172.31.48.113 /usr/local/apache-tomcat-8.5.85/bin/startup.sh
      
              """       
            }
            
              }
         }
              
    }
}
